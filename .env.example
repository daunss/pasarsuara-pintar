# ===========================================
# PasarSuara Pintar - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Supabase (Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Kolosal AI (Indonesian NLU)
# Get your API key from: https://kolosal.ai
KOLOSAL_API_KEY=kol_your-api-key-here
KOLOSAL_BASE_URL=https://api.kolosal.ai/v1

# Google Gemini (STT & Image)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Backend Configuration
BACKEND_PORT=8080
BACKEND_HOST=localhost

# WA Gateway Configuration
WA_GATEWAY_PORT=8081
WA_SESSION_PATH=./session

# Frontend Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
NEXT_PUBLIC_API_URL=http://localhost:8080

